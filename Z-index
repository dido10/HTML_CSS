    <style>
        div {
            width: 200px;
            height: 200px;
        }

        .green {
            background: green;
            z-index: 2;/*>0 yeşil öne geçiyor.*/
            position: relative;/*ya da absolute*/
        }
        .red {
            background: red;
            position: relative;
            z-index: 1;
           margin-top: -50px;
            margin-left: 50px;
        }
        .yellow{
            position: fixed;
            top: 0;
            left: 100px;
            background: yellow;
            z-index: 3;

        }
    </style>
